                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:${version.maven-deploy}:deploy
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
